<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.NewPage5"
            >
    <Grid RowDefinitions="*,*">
        
        <Image Source="egg1.png" HeightRequest="200" WidthRequest="200" x:Name="egg" VerticalOptions="End"/>
        <Button Text="Start Growing"
                Grid.Row="1"
                
                x:Name="growBtn"
                IsVisible="Hidden"
        FontSize="18"
        TextColor="Black"
        Padding="15,10"
                Clicked="navToShell"
        CornerRadius="25"
        HorizontalOptions="Center"
        VerticalOptions="Start">
            <Button.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#275a58" Offset="0.0" />
                    <GradientStop Color="#275a58" Offset="1.0" />
                </LinearGradientBrush>
            </Button.Background>
            <Button.Shadow>
                <Shadow Brush="green" Opacity="0.5" Radius="10" Offset="2,0"/>
            </Button.Shadow>
        </Button>
    </Grid>
</ContentPage>