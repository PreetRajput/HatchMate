<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.petNameInput"
             BackgroundColor="#FFF8E7">

    <VerticalStackLayout Padding="30" Spacing="20"  VerticalOptions="Center">

        <!-- Spacer to push content to middle -->

            <!-- Egg image in center -->
            <Image Source="egg1.png"
                   HeightRequest="200"
                   WidthRequest="200"
                   HorizontalOptions="Center" 
                   x:Name="eggUnhatched"/>

            <!-- Entry to write pet name -->
            <Entry Placeholder="Enter your pet's name"
                   TextColor="#4A148C"
                   BackgroundColor="#F3E5F5"
                   FontSize="18"
                   HorizontalTextAlignment="Center"
                   HeightRequest="50"
                   Margin="0,10"/>

        <!-- Hatch button at the bottom -->
        <Button Text="Hatch"
                BackgroundColor="#4A148C"
                TextColor="White"
                FontSize="20"
                CornerRadius="25"
                HeightRequest="60"
                Clicked="hatchEgg"
               />

    </VerticalStackLayout>

</ContentPage>
