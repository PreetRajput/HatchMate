<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Pet"
             BackgroundColor="White">
        <Grid RowDefinitions="*, *, *" ColumnDefinitions="*,*,*">

        <Label Text="{Binding LabelText}"  Grid.Row="0" Grid.Column="0" TextColor="Black" 
               Grid.ColumnSpan="3"  HorizontalOptions="Center" 
               VerticalOptions="Center" FontAttributes="Bold" FontFamily="bitcount"
               FontSize="24"/>

        <ImageButton Source="{Binding ImageSource}"  Grid.Row="1" Grid.Column="1" 
                     HeightRequest="150" Command="{Binding changeAnimationCommand}"/>
       
            

            <ProgressBar x:Name="expBar" Progress="0" Grid.Row="2"
                Grid.Column="1"  ProgressColor="Green" BackgroundColor="#B0BEC5"
                         HeightRequest="5" VerticalOptions="Start"/>




    </Grid>
</ContentPage>